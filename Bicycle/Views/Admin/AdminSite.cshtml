@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
    ViewBag.Title = "站点管理";
}

<div class="admin-table" id="adminSite">
    <span class="label label-info" >站点管理</span>
    <div id="toolbar">
        <div class="btn-group">
            <button class="btn btn-default" data-toggle="modal" data-target="#AddSite">
                <i class="fa fa-plus fa-lg"></i> 新增
            </button>
            <button class="btn btn-default" v-on:click="deleteSite">
                <i class="fa fa-trash fa-lg"></i> 删除
            </button>
            <button class="btn btn-default" v-on:click="clickUpdata">
                <i class="fa fa-edit fa-lg"></i> 修改
            </button>
        </div>
    </div>
    <table id="siteTable" data-toolbar="#toolbar"></table>

    <div class="modal fade" id="AddSite" role="dialog" aria-labelledby="AddSiteHead" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="AddSiteHead">添加站点</h4>
                </div>
                <div class="modal-body">
                    <div class="col-md-6 col-md-offset-3">
                        <label>站点区域</label>
                        <select class="form-control" id="siteArea" v-model="addSiteArea">
                            <option disabled selected>请选择站点区域</option>
                            <option v-for="siteArea of siteAreas">{{ siteArea.name }}</option>
                        </select>
                    </div>
                    <div class="clear"></div>
                    <div class="col-md-6 col-md-offset-3">
                        <label>站点名</label>
                        <input class="form-control" id="siteName" type="text" v-model="addSiteName" placeholder="请输入站点名"/>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="addSiteBtn" v-on:click="addSite">确认</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="UpdataSite" role="dialog" aria-labelledby="UpdataSiteHead" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="UpdataSiteHead">{{ upSiteId }}</h4>
                </div>
                <div class="modal-body">
                    <div class="col-md-6 col-md-offset-3">
                        <label>站点名</label>
                        <input class="form-control" id="siteName" type="text" v-model="upSiteName"/>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="addSiteBtn" v-on:click="UpdataSite">确认</button>
                </div>
            </div>
        </div>
    </div>

</div>

@Scripts.Render("~/Scripts/adminsite.js")
